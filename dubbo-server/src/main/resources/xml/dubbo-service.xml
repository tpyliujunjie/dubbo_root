<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="dubbo-server" owner="lizikj"
		organization="lizikj" />

	<dubbo:registry address="${dubbo.registry.address}" />
	<dubbo:provider timeout="${dubbo.registry.timeout}">

	</dubbo:provider>
	<dubbo:consumer timeout="${dubbo.registry.timeout}"
		retries="0" />
	<!-- 监控中心 -->
	<dubbo:monitor protocol="registry" />

	<!-- 注解扫描路径 -->
	<dubbo:annotation package="com.facade" />

	<dubbo:protocol name="dubbo" port="${dubbo.registry.port}" />


</beans>